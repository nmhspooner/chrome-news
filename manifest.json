{
  "manifest_version": 2,
  "name": "Reuters News Summaries",
  "version": "1.0",
  "description": "Extracts summaries of headline news articles from Reuters.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reuters.com/world/*"
      ],
      "js": ["content.js"]
    }
  ]
}
